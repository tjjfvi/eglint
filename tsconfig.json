{
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "target": "ES2019",
    "downlevelIteration": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "composite": true,
    "outDir": "dist",
    "jsx": "react",
    "importHelpers": true,
    "lib": [
      "ES2019",
      "DOM"
    ]
  },
  "ts-node": {
    "transpileOnly": true,
  },
  "include": [
    "src/**/*",
    "tests/runner/**/*",
    "3up/**/*",
  ],
}