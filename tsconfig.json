{
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "target": "ES2019",
    "downlevelIteration": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": [
      "ES2019"
    ]
  },
  "ts-node": {
    "transpileOnly": true,
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "test"
  ]
}